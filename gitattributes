# Normalize line endings and prevent CRLF churn
* text=auto eol=lf

# Markdown and docs
*.md      text eol=lf
*.txt     text eol=lf
LICENSE   text eol=lf

# Code and data
*.yml     text eol=lf
*.yaml    text eol=lf
*.json    text eol=lf
*.py      text eol=lf
*.sh      text eol=lf
*.js      text eol=lf
*.ts      text eol=lf
*.css     text eol=lf

# Windows scripts
*.bat     text eol=crlf
*.cmd     text eol=crlf
*.ps1     text eol=crlf

# Binary assets
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.webp    binary
*.pdf     binary
*.zip     binary
*.7z      binary
*.mp3     binary
*.wav     binary
*.ogg     binary
